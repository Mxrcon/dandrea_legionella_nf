manifest {
    name = 'Dandrea legionella analysis'
    description = "Workflow for the the Legionella analsis"
    version = '0.1.0'
    author = 'Abhinav Sharma <abhi18av@outlook.com>; Emilyn Costa Conceição <emilyncosta@outlook.com>'
    mainScript = 'main.nf'
    defaultBranch = 'master'
}


process {
    errorStrategy = 'retry'
    maxRetries = 3
}


profiles {
    standard {
        docker.enabled = true
    }

    aws_batch {
        aws.client.uploadMaxThreads = 4
    }

    google_cloud_life_sciences {
        process.executor = 'google-lifesciences'
        workDir = 'gs://nextflow-gcp-bucket/work'
        google.region = 'us-central1'
        google.project = 'nextflow-gcp'

        process {
            withName:
            "MTBSEQ.*" {
                cpus = 8
                memory = '15 GB'
            }
        }


    }

}

